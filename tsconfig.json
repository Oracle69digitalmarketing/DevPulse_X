{
  "compilerOptions": {
    "target": "ES2020",                       // Modern JS output
    "module": "ESNext",                        // For Webpack bundling & dynamic import
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],                 // DOM for React + VS Code Webview
    "allowJs": true,                           // Allow JS files if needed
    "checkJs": false,
    "jsx": "react-jsx",                        // React 18 JSX transform
    "outDir": "out",                           // Compiled VS Code extension files
    "rootDir": "src",                          // Source folder
    "strict": true,                            // Enable strict type checking
    "esModuleInterop": true,                   // Default import compatibility
    "skipLibCheck": true,                      // Skip type checks on dependencies
    "forceConsistentCasingInFileNames": true, // Enforce consistent file naming
    "sourceMap": true,                         // For debugging
    "noImplicitAny": true,
    "resolveJsonModule": true,                 // Import JSON if needed
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "out"]
}
