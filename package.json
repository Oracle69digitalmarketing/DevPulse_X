{
  "name": "devpulse-x",
  "version": "1.0.0",
  "description": "DevPulse X â€” The Autonomous Coding Companion for VS Code",
  "main": "./out/extension.js",
  "author": "Prince Adewale",
  "license": "MIT",
  "engines": {
    "vscode": "^1.81.0"
  },
  "activationEvents": [
    "onStartupFinished",
    "onCommand:devpulse.showDashboard",
    "onCommand:devpulse.autoScaffold"
  ],
  "contributes": {
    "commands": [
      {
        "command": "devpulse.showDashboard",
        "title": "DevPulse: Show Dashboard"
      },
      {
        "command": "devpulse.autoScaffold",
        "title": "DevPulse: Auto-Scaffold Component"
      }
    ]
  },
  "scripts": {
    "// VS Code Extension Scripts": "",
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "start": "code --extensionDevelopmentPath=.",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js",
    "// UI (Webpack) Scripts": "",
    "start:ui": "webpack serve --mode development --config webpack.config.js",
    "build:ui": "webpack --mode production --config webpack.config.js",
    "build:ui:dev": "webpack --mode development --config webpack.config.js",
    "// Quality & Build Scripts": "",
    "lint": "eslint 'src/**/*.{js,ts,tsx}' --quiet",
    "lint:fix": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "format": "prettier --write 'src/**/*.{js,ts,tsx,json,css,md}'",
    "clean": "rimraf out dist",
    "build": "npm run clean && npm run format && npm run lint && npm run compile && npm run build:ui",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-chartjs-2": "^5.2.0",
    "chart.js": "^4.5.0",
    "web-features": "^2.1.0",
    "@babel/parser": "^7.22.9",
    "@babel/traverse": "^7.22.9"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/vscode": "^1.81.0",
    "@vscode/test-electron": "^2.3.4",
    "ts-loader": "^9.4.5",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "css-loader": "^6.9.4",
    "style-loader": "^3.3.3",
    "babel-loader": "^9.1.3",
    "html-webpack-plugin": "^5.5.3",
    "clean-webpack-plugin": "^4.0.0",
    "mini-css-extract-plugin": "^2.7.6",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "terser-webpack-plugin": "^5.3.9",
    "eslint": "^8.47.0",
    "prettier": "^3.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint-plugin-react": "^7.33.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "rimraf": "^5.0.5"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx,json,css,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
